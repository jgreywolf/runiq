{
  "name": "runiq",
  "scopeName": "source.runiq",
  "fileTypes": [
    ".runiq"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.runiq",
      "match": "\\b(BT|CFM|GPM|K|L/min|L/s|LR|MPa|RL|TB|ac|actor|aggregation|alt|analysis|anchor|as|association|async|bar|bidirectional|biodegradable|bottom|boundary|break|component|composition|container|control|create|critical|dashed|database|dc|degC|degF|dependency|destroy|diagram|digital|direction|dotted|double|electrical|entity|evolve|flowRate|fluid|force|found|fragment|generalization|group|hollow|hydraulic|inst|kPa|layered|left|loop|lost|max|message|min|mindmap|mineral|module|mrtree|mÂ³/h|net|noise|none|note|op|open|operating|opt|orthogonal|over|package|par|part|participant|phosphate-ester|pneumatic|polyline|pressure|private|protected|psi|public|radial|rated|realization|return|right|routing|schematic|sequence|shape|solid|source|splines|standard|straight|stress|style|sync|synthetic|target|to|top|tran|wardley|water-glycol)\\b|\\b(abstract:|activate:|affected:|algorithm:|alternatives:|arrowType:|attributes:|backgroundColor:|borderColor:|borderStyle:|borderWidth:|carrier:|colors:|constraints:|data:|deceased:|default:|derived:|edgeType:|evolution:|from:|genericTypes:|guard:|icon:|inertia:|label:|labelPosition:|legendPosition:|lineStyle:|link:|map:|methods:|multiplicitySource:|multiplicityTarget:|name:|navigability:|of:|opacity:|padding:|params:|participants:|pins:|ports:|position:|returnType:|roleSource:|roleTarget:|routing:|showLegend:|source:|spacing:|stacked:|static:|stereotype:|style:|temp:|timing:|title:|to:|tooltip:|type:|value:|visibility:|xLabel:|yLabel:)\\B"
    },
    {
      "name": "string.quoted.double.runiq",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.runiq",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.runiq"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.runiq"
            }
          }
        },
        {
          "begin": "//#",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.runiq"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.runiq"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.runiq",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
