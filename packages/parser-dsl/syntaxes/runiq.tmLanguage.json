{
  "name": "runiq",
  "scopeName": "source.runiq",
  "fileTypes": [
    ".runiq"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.runiq",
      "match": "\\b(BT|LR|RL|TB|ac|aggregation|analysis|as|association|bidirectional|bottom|composition|container|dashed|dc|dependency|diagram|digital|direction|dotted|double|force|generalization|group|hollow|inst|layered|left|mindmap|module|mrtree|net|noise|none|op|open|orthogonal|package|part|polyline|private|protected|public|radial|realization|right|routing|schematic|shape|solid|source|splines|standard|straight|stress|style|target|top|tran)\\b|\\b(abstract:|affected:|algorithm:|arrowType:|attributes:|backgroundColor:|borderColor:|borderStyle:|borderWidth:|carrier:|colors:|constraints:|data:|deceased:|default:|derived:|edgeType:|genericTypes:|icon:|label:|labelPosition:|legendPosition:|lineStyle:|link:|map:|methods:|multiplicitySource:|multiplicityTarget:|name:|navigability:|of:|opacity:|padding:|params:|pins:|ports:|returnType:|roleSource:|roleTarget:|routing:|showLegend:|source:|spacing:|stacked:|static:|stereotype:|style:|title:|tooltip:|type:|value:|visibility:|xLabel:|yLabel:)\\B"
    },
    {
      "name": "string.quoted.double.runiq",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.runiq",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.runiq"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.runiq"
            }
          }
        },
        {
          "begin": "//#",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.runiq"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.runiq"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.runiq",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
