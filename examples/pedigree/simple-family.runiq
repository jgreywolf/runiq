// Simple Family Tree - Two Generations
// Basic example showing parents and children

diagram "Johnson Family" {
  // Parents
  shape dad as @pedigreeMale label:"Tom Johnson"
  shape mom as @pedigreeFemale label:"Lisa Johnson"
  
  // Children
  shape son as @pedigreeMale label:"Jake"
  shape daughter as @pedigreeFemale label:"Emma"
  
  // Marriage
  dad -> mom
  
  // Children relationships
  dad -> son
  dad -> daughter
  mom -> son
  mom -> daughter
}
