# Test Marriage Edge Properties
# Demonstrates lineStyle and arrowType for pedigree marriages
diagram "Marriage Edge Test" {
  direction TB

  # Generation I - Grandparents
  shape grandfather as @pedigreeMale label:"Grandfather"
  shape grandmother as @pedigreeFemale label:"Grandmother"

  # Generation II - Parents  
  shape father as @pedigreeMale label:"Father" affected:true
  shape mother as @pedigreeFemale label:"Mother"

  # Marriage lines (horizontal, no arrows)
  grandfather -> grandmother lineStyle:"solid" arrowType:none
  father -> mother lineStyle:"solid" arrowType:none

  # Parent-child connections (standard directed edges)
  grandfather -> father
  grandmother -> father
  father -> mother
  mother -> father
}
