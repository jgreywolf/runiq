# Test MRTree Layout for Pedigree
# Simple 2-generation test to evaluate mrtree algorithm
diagram "MRTree Test" {
  direction TB

  # Generation I
  shape father as @pedigreeMale label:"Father" affected:true
  shape mother as @pedigreeFemale label:"Mother"

  # Generation II  
  shape child1 as @pedigreeMale label:"Child 1" affected:true
  shape child2 as @pedigreeFemale label:"Child 2" carrier:true
  shape child3 as @pedigreeMale label:"Child 3"

  # Marriage
  father -> mother

  # Parent-child (both parents to all children)
  father -> child1
  father -> child2
  father -> child3
  mother -> child1
  mother -> child2
  mother -> child3
}
