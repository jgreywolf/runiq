// Stacked bar chart with all label properties
// Testing title, xLabel, yLabel with stacked bars

shape chart1 as @bar-chart-vertical 
  label: "Revenue Breakdown"
  title: "Revenue by Category - 2025"
  xLabel: "Month"
  yLabel: "Revenue ($K)"
  stacked: true
  showLegend: true
  colors: ["#f56565", "#48bb78", "#4299e1"]
  data: [
    {"label": "Jan", "values": [50, 30, 20]},
    {"label": "Feb", "values": [55, 35, 25]},
    {"label": "Mar", "values": [60, 40, 30]},
    {"label": "Apr", "values": [65, 45, 35]}
  ]
