diagram "Simple ATM Example" {
  
  // Actor
  shape user as @actor label:"Bank Customer"
  
  // System boundary with use cases
  container atm "ATM System" {
    shape withdraw as @ellipse-wide label:"Withdraw Cash"
    shape checkBalance as @ellipse-wide label:"Check Balance"
    shape printReceipt as @ellipse-wide label:"Print Receipt"
  }
  
  // Relationships
  user -> withdraw
  user -> checkBalance
  withdraw -optional-> printReceipt
}
