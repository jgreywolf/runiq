diagram "Banking System - Customer Use Cases" {
  
  // Actors
  shape customer as @actor label:"Customer"
  shape bankStaff as @actor label:"Bank Staff"
  shape system as @actor label:"Payment Gateway"
  
  // System boundary (contains use cases)
  container bank "Banking System" {
    // Use cases - the functionality provided by the system
    shape login as @ellipseWide label:"Login to Account"
    shape viewBalance as @ellipseWide label:"View Account Balance"
    shape transfer as @ellipseWide label:"Transfer Money"
    shape deposit as @ellipseWide label:"Deposit Funds"
    shape withdraw as @ellipseWide label:"Withdraw Funds"
    shape generateReport as @ellipseWide label:"Generate Transaction Report"
  }
  
  // Customer interactions (associations)
  customer -> login
  customer -> viewBalance
  customer -> transfer
  customer -> deposit
  customer -> withdraw
  
  // Bank staff interactions
  bankStaff -> generateReport
  bankStaff -> viewBalance
  
  // System interactions
  transfer -processes_payment-> system
}
