{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@runiq/core": ["./packages/core/src"],
      "@runiq/parser-dsl": ["./packages/parser-dsl/src"],
      "@runiq/io-json": ["./packages/io-json/src"],
      "@runiq/layout-base": ["./packages/layout-base/src"],
      "@runiq/renderer-svg": ["./packages/renderer-svg/src"],
      "@runiq/icons-fontawesome": ["./packages/icons-fontawesome/src"],
      "@runiq/cli": ["./packages/cli/src"]
    }
  },
  "include": ["packages/*/src/**/*", "apps/*/src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
